<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorDarkGray"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_articles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:src="@mipmap/article_small"
                />
            <TextView
                android:id="@+id/tv_articles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Articles"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/colorDarkGray"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_videos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:src="@mipmap/videos_small"
                />
            <TextView
                android:id="@+id/tv_videos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Videos"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/colorDarkGray"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_audios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:src="@mipmap/audios_small"
                />
            <TextView
                android:id="@+id/tv_audios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Audios"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/colorDarkGray"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_mybids"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:src="@mipmap/diary_small"
                />
            <TextView
                android:id="@+id/tv_mybids"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Diary"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textAlignment="center"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorDarkGray"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_payments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:src="@mipmap/diary_small"
                />
            <TextView
                android:id="@+id/tv_payments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Fun"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>